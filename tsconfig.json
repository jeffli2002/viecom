{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/app/[locale]/settings/billing/page.tsx",
    "src/app/api/creem/**/*.ts",
    "src/app/api/creem/**/*.tsx",
    "src/app/api/webhooks/creem/route.ts",
    "src/components/auth/UpgradePrompt.tsx",
    "src/components/pricing/**/*.tsx",
    "src/app/api/payment/**/*.ts",
    "src/components/billing/**/*.tsx",
    "src/hooks/use-creem-payment.ts",
    "src/lib/creem/**/*.ts",
    "src/payment/creem/**/*.ts",
    "src/payment/types.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**",
    "coverage/**",
    "playwright-report/**",
    "test-results/**",
    "scripts/**",
    "test-*.cjs",
    "test-*.js",
    "test-*.ts",
    "AI Image_Video Generator/**",
    "压缩/AI Image_Video Generator/**",
    "FigmaMockup/**",
    "压缩/**",
    ".next/**",
    "src/main.tsx",
    "src/App.tsx",
    "vite.config.ts",
    "src/scripts/**",
    "./src/components/workflow/**/*"
  ]
}
