{
  "name": "@viecom/creem-subscription",
  "version": "0.1.0",
  "description": "Modular Creem subscription management for SaaS applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters/drizzle": {
      "types": "./dist/adapters/database/drizzle-adapter.d.ts",
      "import": "./dist/adapters/database/drizzle-adapter.mjs",
      "require": "./dist/adapters/database/drizzle-adapter.js"
    },
    "./adapters/better-auth": {
      "types": "./dist/adapters/auth/better-auth-adapter.d.ts",
      "import": "./dist/adapters/auth/better-auth-adapter.mjs",
      "require": "./dist/adapters/auth/better-auth-adapter.js"
    }
  },
  "files": ["dist", "migrations", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": ["creem", "subscription", "payment", "saas", "billing"],
  "author": "Viecom",
  "license": "MIT",
  "peerDependencies": {
    "drizzle-orm": "^0.41.0",
    "better-auth": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    },
    "better-auth": {
      "optional": true
    }
  },
  "dependencies": {
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vitest": "^2.0.0"
  }
}
